{% extends 'main.html.twig' %}

{% block content %}
    <div class="container">
        <h1 class="pt-3 pb-3">{{ trailer.title }}</h1>
        <div class="row">
            <div class="col-2">
                <img src="{{ trailer.image }}" alt="">
            </div>
            <div class="col-10">
                <div class="card">
                    <div class="card-body">
                        <h4>Description</h4>
                        <p class="card-text">{{ trailer.description }}</p>
                    </div>
                    <div class="card-body">
                        <h4>Publication date</h4>
                        <p class="card-text">{{ trailer.pubDate | date }}</p>
                    </div>
                    <div class="card-footer">
                        <p>
                            <a class="btn btn-dark" href="{{ trailer.link }}">{{ 'Source' }}</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <p class="text-right"><a href="/">{{ 'Back to list' }}</a></p>
    </div>
{% endblock %}
